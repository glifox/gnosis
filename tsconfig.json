{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"], // Archivos a incluir en la compilaci√≥n
  "exclude": ["node_modules", "dist"] // Archivos a excluir
}