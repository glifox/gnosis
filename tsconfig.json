{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/plugin.js",
    "src/**/extension.js"
  ],
  "exclude": ["node_modules", "dist"]
}