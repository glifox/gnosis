{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["src/exports.ts"],
  "exclude": ["node_modules", "dist"],
}
